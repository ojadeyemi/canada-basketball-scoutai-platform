# Database
DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/canada_basketball_ai

# Google Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=service-account.json
GCS_BUCKET_NAME=canada-basketball-scouting-reports

# LLM Provider Configuration
LLM_PROVIDER=google  # "openai", "google", or "cohere"
# Recommended default: Gemini 2.5 flash for general tasks; change to a pro
# variant for heavier analytical tasks (e.g. gemini-2.5-pro)
DEFAULT_MODEL=gemini-2.5-flash  # Default model for chosen provider

# OpenAI API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Google AI API Key (for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# Cohere API Keys (future use)
# COHERE_API_KEY=your_cohere_api_key_here

# Model Configuration (per task - leave empty to use DEFAULT_MODEL)
ROUTER_MODEL=  # Fast intent classification (defaults to gemini-2.5-flash or gpt-4o-mini)
SQL_MODEL=  # SQL generation (defaults to provider default)
SCOUTING_MODEL=  # Scouting analysis (defaults to provider default)

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
PYTHONPATH=./
